<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CSActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="Your age is:"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/age"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your gender is:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/gender"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your weight is:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/weight"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your height is:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/height"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your sleep time is:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/sleep"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequence to eat spicy or salty food is:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/food"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequence of drinking alcohol:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/alcohol"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequence of exercise:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/exercise"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequence of feeling nervous:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/nervous"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your health score is:"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/score"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PXC"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</ScrollView>