<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F0F2F4"
    tools:context=".PIActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4E6E8"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="26sp"
            android:layout_height="wrap_content"
            android:text="Exercise Alarm"/>

        <TextView
            android:id="@+id/alarm1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bk_user"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="26sp"
            android:layout_height="wrap_content"
            android:text="Eating Alarm"/>

        <TextView
            android:id="@+id/alarm2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bk_user"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="26sp"
            android:layout_height="wrap_content"
            android:text="Wake up Alarm"/>

        <TextView
            android:id="@+id/alarm4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bk_user"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="26sp"
            android:layout_height="wrap_content"
            android:text="Sleep Alarm"/>

        <TextView
            android:id="@+id/alarm3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bk_user"
            />





    </LinearLayout>

</ScrollView>